{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "alwaysStrict": true,
    "outDir": "dist/",
    "jsx": "react"
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "typings/browser",
    "typings/browser.d.ts",
    "dist/*",
    "examples"
  ]
}
